<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:padding="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/row_title"
            android:text="MON- 11/2"
            android:textSize="25sp"
            android:layout_marginStart="5dp"
            android:layout_centerVertical="true"
            android:textColor="@color/textColor"
            android:fontFamily="sans-serif"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/indicator_linear_layout"
                android:layout_marginEnd="5dp">
                <TextView
                    android:layout_width="@dimen/indicator_padding"
                    android:layout_height="@dimen/indicator_padding"
                    android:id="@+id/row_letter"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/rect_rounded_green"
                    android:text="A"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#fff"/>
                <TextView
                    android:layout_width="@dimen/indicator_padding"
                    android:layout_height="@dimen/indicator_padding"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/row_number"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:background="@drawable/rect_rounded_blue"
                    android:text="1"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="@dimen/indicator_padding"
                    android:layout_height="@dimen/indicator_padding"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/row_early_release"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:background="@drawable/rect_rounded_red"
                    android:text="ER"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="@dimen/indicator_padding"
                    android:layout_height="@dimen/indicator_padding"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/row_activity_period"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:background="@drawable/rect_rounded_purple"
                    android:text="AP"
                    android:layout_gravity="center_vertical"/>
                </LinearLayout>
            </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>