<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/gray_outline">
        <TextView
            android:layout_width="@dimen/indicator_padding"
            android:layout_height="@dimen/indicator_padding"
            android:layout_gravity="center_vertical"
            android:background="@color/rounded_rect_green"
            android:text="A"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#fff"
            android:elevation="@dimen/indicator_elevation"
            android:id="@+id/configure_view_period"/>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/thin_outline"
            android:layout_toRightOf="@id/configure_view_period"
            android:id="@+id/configure_div_1"/>

        <EditText
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_marginRight="40dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/configure_div_1"
            android:layout_centerVertical="true"
            android:hint="Class Name"/>

    </RelativeLayout>
</RelativeLayout>