<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp">
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:padding="3dp"
    android:background="?android:selectableItemBackground">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/row_title"
            android:text="MON- 11/2"
            android:textSize="25sp"
            android:layout_marginStart="5dp"
            android:layout_centerVertical="true"
            android:textColor="@color/textColor"
            android:fontFamily="sans-serif-light"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/indicator_linear_layout"
                android:layout_marginEnd="5dp">
                <FrameLayout
                    android:layout_width="@dimen/indicator_padding"
                    android:layout_height="@dimen/indicator_padding"
                    android:layout_margin="3dp"
                    android:id="@+id/row_snow_icon"
                    android:background="#fff"
                    android:visibility="gone"
                    android:elevation="@dimen/indicator_elevation"
                    android:layout_gravity="center_vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_snowflake"
                        android:layout_margin="3dp"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="@dimen/indicator_padding"
                    android:layout_height="@dimen/indicator_padding"
                    android:background="#ccc"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="3dp"
                    android:elevation="3dp"
                    android:id="@+id/row_star_icon"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/star"
                        android:layout_gravity="center"/>
                    </FrameLayout>
                <TextView
                    android:layout_width="@dimen/indicator_padding"
                    android:layout_height="@dimen/indicator_padding"
                    android:id="@+id/row_letter"
                    android:layout_gravity="center_vertical"
                    android:background="@color/rounded_rect_green"
                    android:text="A"
                    android:textSize="20sp"
                    android:layout_margin="3dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:elevation="@dimen/indicator_elevation"/>
                <TextView
                    android:layout_width="@dimen/indicator_padding"
                    android:layout_height="@dimen/indicator_padding"
                    android:layout_margin="3dp"
                    android:id="@+id/row_number"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:background="@color/rounded_rect_blue"
                    android:text="1"
                    android:elevation="@dimen/indicator_elevation"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="@dimen/indicator_padding"
                    android:layout_height="@dimen/indicator_padding"
                    android:layout_margin="3dp"
                    android:id="@+id/row_early_release"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:elevation="@dimen/indicator_elevation"
                    android:background="@color/rounded_rect_red"
                    android:text="ER"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="@dimen/indicator_padding"
                    android:layout_height="@dimen/indicator_padding"
                    android:layout_margin="3dp"
                    android:id="@+id/row_activity_period"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:background="@color/rounded_rect_purple"
                    android:text="AP"
                    android:elevation="@dimen/indicator_elevation"
                    android:layout_gravity="center_vertical"/>
                </LinearLayout>
            </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>