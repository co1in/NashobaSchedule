<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ctrmksw.nashobaschedule" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".CalendarActivity"
            android:label="Calendar"
            android:parentActivityName=".AgendaActivity" >
        </activity>
        <activity
            android:name=".AgendaActivity"
            android:label="Schedule" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ConfigureScheduleActivity"
            android:label="@string/title_activity_configure_schedule"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="Settings" >
        </activity>
        <activity
            android:name=".DeveloperDashboardActivity"
            android:label="Developer Login" >
        </activity>
        <activity
            android:name=".powerschool.PowerschoolActivity"
            android:label="Powerschool"
            android:icon="@drawable/powerschool"
            android:theme="@style/PowerschoolTheme">
        </activity>
    </application>

</manifest>
